<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">

    <ImageButton
        android:id="@+id/plusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:contentDescription="@string/plus"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/plusup" />

    <ImageButton
        android:id="@+id/minusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/minus"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/minusup" />

    <ImageButton
        android:id="@+id/d0Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/zero"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a0up" />

    <ImageButton
        android:id="@+id/d1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/one"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a1up" />

    <ImageButton
        android:id="@+id/d2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/two"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a2up" />

    <ImageButton
        android:id="@+id/d3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/three"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a3up" />

    <ImageButton
        android:id="@+id/d4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/four"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a4up" />

    <ImageButton
        android:id="@+id/d5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/five"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a5up" />

    <ImageButton
        android:id="@+id/d6Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/six"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a6up" />

    <ImageButton
        android:id="@+id/d7Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:adjustViewBounds="true"
        android:contentDescription="@string/seven"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a7up" />

    <ImageButton
        android:id="@+id/d8Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:adjustViewBounds="true"
        android:contentDescription="@string/eight"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a8up" />

    <ImageButton
        android:id="@+id/d9Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="0"
        android:adjustViewBounds="true"
        android:contentDescription="@string/nine"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/a9up" />

    <ImageButton
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="0"
        android:adjustViewBounds="true"
        android:contentDescription="@string/clear"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/clrup" />

    <ImageButton
        android:id="@+id/proButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pro"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/proup" />

    <ImageButton
        android:id="@+id/keyrelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/keyrel"
        android:maxWidth="60dp"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/keyrelup" />
</GridLayout>
